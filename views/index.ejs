<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <h3>All Chats!</h3>
    <form action="/chats/new" method="get">
      <button>New Chat</button>
    </form>
    <% for(let chat of chats){ %>
    <div class="chat">
      <p>From : <i> <%= chat.from %> </i></p>
      <div class="msg">
        <p>Message : <%= chat.msg %></p>

        <form action="/chats/<%=chat._id%>/edit" method="get">
          <button>Edit</button>
        </form>

        <form action="/chats/<%=chat._id%>?_method=DELETE" method="POST">
          <button>Delete</button>
        </form>
      </div>
      <p>Recieved by:<i> <%= chat.to %> </i></p>
      <hr />
      <p>
        Date : <%=chat.created_at.toString().split(" ").slice(1,4).join(" ") %>
      </p>
      <p>
        Time : <%=chat.created_at.toString().split(" ")[0] %> |
        <%=chat.created_at.toString().split(" ")[4] %>
      </p>
    </div>
    <br /><br />
    <%};%>
  </body>
</html>
